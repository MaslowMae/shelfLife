                </section>
            </article>
            <!-- Comments section-->
            <section class="mb-5">
                <div class="card bg-light">
                    <div class="card-body">
                        <!-- Comment form-->
                        <form class="mb-4"><textarea class="form-control" rows="3"
                                placeholder="Leave a comment!!"></textarea></form>
                        <!-- Comment with nested comments-->
                        {{#if posts.length}}

                        <div class="d-flex mb-4">
                            <!-- Parent comment-->
                            <div class="flex-shrink-0"><img class="rounded-circle"
                                    src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..."></div>
                            {{#each posts}}
                            <div class="ms-3">
                                <div class="fw-bold">{{this.user.username}}</div>
                                {{this.content}}
                                <!-- Child comment 1-->
                                
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <p>No posts yet!</p>
                        {{/if}}
                        <!-- Single comment-->
                        
                    </div>
                </div>
            </section>
        </div>
