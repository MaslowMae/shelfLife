<div class="row">
  <div class="col-auto">
    <h2>Welcome {{username}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="post">Post:{{postTitle}}</label>
        <input class="form-input" type="text" id="post" name="project-name" />
      </div>
      <div class="form-group">
        <label for="post-content">{{post_content}}</label>
        <input class="form-input" type="number" id="post-content" name="project-funding" />
      </div>
     
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>